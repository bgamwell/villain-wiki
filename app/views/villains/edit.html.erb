<%= render 'menu' %>

<div class="container">
  <div class="col-md-8 col-md-offset-2 text-center">
    <h1 class="headline">Edit <%= @villain.name %>'s profile!</h1>

    <hr>

  </div>

  <br />

  <div class="col-md-8 col-md-offset-2">

    <%= form_for @villain, :url => villain_path, :html => { :multipart => true, :class => "form-horizontal-center"} do |f| %>
      <div class="form-group">
        <%= f.label :name, "Name", class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.text_field :name, class: "form-control" %>
          </div>
      </div>
      <br />
      <br />
      <br />
      <br />
      <div class="form group">
        <%= f.label :description, "Backstory", class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.text_area :description, class: "form-control" %>
          </div>
      </div>
      <br />
      <br />
      <br />
      <br />
      <div class="form group">
        <%= f.label :avatar, "Villain Avatar", class: "col-md-4 control-label" %>
        <div class="col-md-8 text-center">
          <%= f.file_field :avatar, class: "form-control" %>
        </div>
      </div>
      <br />
      <br />
      <br />
      <br />
      <div class="form group">
        <div class="col-md-8">
          <%= f.submit "Update Villain", class: "btn btn-default" %>
        </div>
      </div>

    <% end %>

  </div>
</div> <!-- close .container -->
